{
  "manifest_version": 3,
  "name": "Ododoc Chrome",
  "version": "0.1.0",
  "short_name": "Ododoc",
  "icons": {
    "16": "images/favicon.ico",
    "48": "images/logo192.png",
    "128": "images/logo512.png"
  }, 
  "background": {
      "service_worker": "background.js"
  },
  "action": {
    "default_title": "Ododoc Chrome",
    "default_popup": "index.html"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "run_at": "document_idle",
      "js": ["contentScript.js"]
    }
  ],
  "permissions": [
    "storage", "activeTab", "webNavigation"
  ]
  
}
